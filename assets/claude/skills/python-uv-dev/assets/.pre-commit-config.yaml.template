repos:
  - repo: local
    hooks:
      - id: ruff-import-sorting
        name: ruff import sorting (I)
        entry: uv run ruff check --select I --fix
        language: system
        types_or: [python]

      - id: ruff-lint
        name: ruff lint
        entry: uv run ruff check --fix
        language: system
        types_or: [python]

      - id: ruff-format
        name: ruff format
        entry: uv run ruff format
        language: system
        types_or: [python]

      - id: pytest
        name: pytest
        entry: uv run pytest
        language: system
        pass_filenames: false
        stages: [pre-push]
