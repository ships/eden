[project]
name = "my-monorepo"
version = "0.1.0"
description = "A Python monorepo using uv workspaces"
requires-python = ">=3.12"
dependencies = [
    # Root project dependencies
    # Reference workspace packages:
    "my-lib",
    "my-utils",
]

[dependency-groups]
dev = [
    "pytest>=8.0.0",
    "pytest-cov>=5.0.0",
    "pytest-asyncio>=0.24.0",
    "ruff>=0.8.0",
    "mypy>=1.0.0",
    "pre-commit>=4.0.0",
]

[tool.uv.workspace]
members = [
    "packages/*",
]

[tool.uv.sources]
# Internal workspace packages
my-lib = { workspace = true }
my-utils = { workspace = true }

# External git dependencies
# example-dep = { git = "https://github.com/user/repo", branch = "main" }

[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"

[tool.ruff]
line-length = 100
target-version = "py312"

[tool.ruff.lint]
select = ["E", "F", "I", "N", "W", "UP"]
ignore = []

[tool.pytest.ini_options]
testpaths = ["tests"]
python_files = ["test_*.py"]
python_classes = ["Test*"]
python_functions = ["test_*"]
addopts = [
    "--strict-markers",
    "--strict-config",
    "-ra",
]
