	clonehub = "!sh -c 'git clone git@github.com:$1/$2.git' -"
	nuke-branch = "!sh -c 'git branch -D $1 && git push origin --delete $1' -"
	mq = "!sh -c 'git merge --squash $1 && git duet-commit -v' -"
