# Path to your oh-my-zsh installation.
export ZSH=$HOME/.oh-my-zsh

ZSH_THEME="ships"
DEFAULT_USER=`whoami`
COMPLETION_WAITING_DOTS="true"

plat=$(uname | tr '[:upper:]' '[:lower:]')

plugins=(git)
fpath=( ~/.eden/functions "${fpath[@]}" )

source $ZSH/oh-my-zsh.sh
export PATH="/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:$PATH"

ls -d1 $HOME/.eden/shared/sources/* | while read document
do
  source $document
done

ls -d1 $HOME/.eden/${plat}/sources/* | while read document
do
  source $document
done


ls -1 $HOME/.eden/shared/functions | while read filename
do
  autoload -Uz $filename
done

ls -1 $HOME/.eden/${plat}/functions | while read filename
do
  autoload -Uz $filename
done
